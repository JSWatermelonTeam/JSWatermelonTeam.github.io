{{> header}}
<div class="row login-form-center">
    <div class=form-control"">
        <div class="col-md-offset-3 col-md-8">
            <section id="loginForm">
                <form action="#/login" class="form-horizontal" method="post">
                    <h1>Log in:</h1>
                    <hr />
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Email">Username</label>
                        <div class="col-md-10">
                            <input class="form-control" data-val="true" id="username" name="username" type="text" value="" />
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Password">Password</label>
                        <div class="col-md-10">
                            <input class="form-control" data-val="true" id="Password" name="password" type="password" />
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>
                    <p>
                        <a href="#/register">Register as a new user</a>
                    </p>
                </form>
            </section>
        </div>
    </div>
</div>
{{> footer}}