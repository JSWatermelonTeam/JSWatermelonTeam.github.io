{{>header}}
<div class="compose-message-wrapper">
    <h2 class="messages-title">Compose a Message</h2>

    <div>
        <form action="#/message/:{{recieverId}}" method="post">
            <div class="form-group add-label-fix">
                <label for="topic">Topic</label>
                <input autofocus="autofocus" class="form-control input-center text-box single-line" id="topic" name="topic" type="text" value="" />
            </div>
            <div class="form-group add-label-fix">
                <label for="description">Description</label>
                <textarea class="form-control input-center" cols="50" id="description" name="description" placeholder="Write your message here" rows="15"></textarea>
            </div>
            <div class="form-group add-label-fix">
                <input type="submit" value="Message" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>
{{>footer}}