{{> header}}
<div class="container body-content">

    <h2 class="sale-details">Sale Details</h2>

    <div class="sales-container">
        <div class="row sales-row">
            <div class="col-lg-12 detailed-sale-picture"><strong><img alt="100%" height="125px" src="{{advert.imageUrl}}" width="400px" /></strong>
            </div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Title:</strong></div>
            <div class="col-lg-6 sale-value">{{advert.title}}</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Category:</strong></div>
            <div class="col-lg-6">CATEGORY GOES HERE</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Price:</strong></div>
            <div class="col-lg-6">{{advert.price}}&#36;</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Description:</strong></div>
            <div class="col-lg-6">{{advert.description}}</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Published by:</strong></div>
            <div class="col-lg-6">{{advert.publisher}}</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Date Published:</strong></div>
            <div class="col-lg-6">{{advert.date}}</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 sale-name"><strong>Seller Phone number:</strong></div>
            <div class="col-lg-6">PHONE NUMBER GOES HERE</div>
        </div>
        <div class="row sales-row">
            <div class="col-lg-4 col-lg-offset-4">
                <a class="btn btn-lg btn-info detailed-btn" href="#/userProfileGoeshHere">Seller Details</a>
                <a class="btn btn-lg btn-info detailed-btn" href="#/MessageSellerLinkGoesHere">Contact seller</a>
            </div>
        </div>
    </div>

{{> footer}}