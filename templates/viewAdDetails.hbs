{{> header}}
<div class="container body-content" id = "{{advert._acl.creator}}">

    <h2 class="ad-details">ad Details</h2>

    <div class="ad-container">
        <div class="row ads-row">
            <div class="col-lg-12 detailed-ad-picture"><strong><img alt="100%" height="125px" src="{{advert.imageUrl}}" width="400px" /></strong>
            </div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 ad-name"><strong>Title:</strong></div>
            <div class="col-lg-6 ad-value">{{advert.title}}</div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 ad-name"><strong>Category:</strong></div>
            <div class="col-lg-6">CATEGORY GOES HERE</div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 ad-name"><strong>Price:</strong></div>
            <div class="col-lg-6">{{advert.price}}&#36;</div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 ad-name"><strong>Description:</strong></div>
            <div class="col-lg-6">{{advert.description}}</div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 ad-name"><strong>Published by:</strong></div>
            <div class="col-lg-6">{{advert.publisher}}</div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 ad-name"><strong>Date Published:</strong></div>
            <div class="col-lg-6">{{advert.date}}</div>
        </div>
        <div class="row ads-row">
            <div class="col-lg-4 col-lg-offset-4">
                <a class="btn btn-info" href="#/userProfile/:{{advert._acl.creator}}">Seller Details</a>

            </div>
        </div>
    </div>

{{> footer}}